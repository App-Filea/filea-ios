# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Setup all certificates and profiles (development, adhoc, appstore)"
  lane :setup_match do
    # Generate certificates and profiles for all environments
    UI.important("üîß G√©n√©ration des certificats Development...")
    match(
      type: "development",
      force: true,
      force_for_new_devices: true
    )

    UI.important("üîß G√©n√©ration des certificats AdHoc...")
    match(
      type: "adhoc",
      force: true,
      force_for_new_devices: true
    )

    UI.important("üîß G√©n√©ration des certificats App Store...")
    match(
      type: "appstore",
      force: true,
      force_for_new_devices: true
    )

    UI.success("‚úÖ Tous les certificats et profils ont √©t√© cr√©√©s avec succ√®s!")
  end

  desc "Clean and regenerate all certificates and profiles"
  lane :regenerate_certificates do
    # Nuke all existing certificates and profiles
    UI.important("üóëÔ∏è  Suppression des certificats et profils Development...")
    match_nuke(
      type: "development",
      skip_confirmation: true
    )

    UI.important("üóëÔ∏è  Suppression des certificats et profils AdHoc...")
    match_nuke(
      type: "adhoc",
      skip_confirmation: true
    )

    UI.important("üóëÔ∏è  Suppression des certificats et profils App Store...")
    match_nuke(
      type: "appstore",
      skip_confirmation: true
    )

    UI.success("‚úÖ Tous les anciens certificats et profils ont √©t√© supprim√©s")

    # Regenerate all certificates and profiles
    UI.important("üîÑ R√©g√©n√©ration des certificats Development...")
    match(
      type: "development",
      force: true,
      force_for_new_devices: true
    )

    UI.important("üîÑ R√©g√©n√©ration des certificats AdHoc...")
    match(
      type: "adhoc",
      force: true,
      force_for_new_devices: true
    )

    UI.important("üîÑ R√©g√©n√©ration des certificats App Store...")
    match(
      type: "appstore",
      force: true,
      force_for_new_devices: true
    )

    UI.success("‚úÖ Tous les nouveaux certificats et profils ont √©t√© cr√©√©s avec succ√®s!")
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do |options|
    # Increment version if bump parameter is provided
    if options[:bump]
      # Get current version
      current_version = get_version_number(
        xcodeproj: "Invoicer.xcodeproj",
        target: "Invoicer"
      )

      # Parse version components
      version_parts = current_version.split('.')
      major = version_parts[0].to_i
      minor = version_parts[1]&.to_i || 0
      patch = version_parts[2]&.to_i || 0

      # Increment based on bump type
      case options[:bump]
      when "major"
        major += 1
        minor = 0
        patch = 0
      when "minor"
        minor += 1
        patch = 0
      when "patch"
        patch += 1
      end

      new_version = "#{major}.#{minor}.#{patch}"

      # Set new version
      increment_version_number(
        xcodeproj: "Invoicer.xcodeproj",
        version_number: new_version
      )

      UI.success("‚úÖ Version incr√©ment√©e de #{current_version} √† #{new_version}")
    end

    # Ensure git status is clean (optional, remove if you want to allow dirty workspace)
    # ensure_git_status_clean

    # Setup App Store Connect API Key
    api_key = app_store_connect_api_key(
      key_id: "KN4CQZ4P8G",
      issuer_id: "52d3d37b-494c-4d95-afee-3272957150c7",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_KN4CQZ4P8G.p8"),
      in_house: false
    )

    # Setup certificates and provisioning profiles
    match(
      type: "appstore",
      api_key: api_key,
      readonly: is_ci,
      verbose: true
    )

    # Get latest TestFlight build number to avoid conflicts
    latest_testflight_build_number = latest_testflight_build_number(
      api_key: api_key,
      app_identifier: CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier),
      initial_build_number: 0
    )

    # Increment build number (based on TestFlight)
    increment_build_number(
      xcodeproj: "Invoicer.xcodeproj",
      build_number: latest_testflight_build_number + 1
    )

    # Build the app using gym
    build_app(
      scheme: "Invoicer",
      project: "Invoicer.xcodeproj",
      clean: true,
      output_directory: "./fastlane/builds",
      output_name: "Invoicer",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier) => "match AppStore #{CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)}"
        }
      }
    )

    # Get changelog from last commit body (description only, not the title)
    changelog = sh("git log -1 --pretty=%b").strip

    # Use default message if commit body is empty
    if changelog.empty?
      changelog = "Corrections de bugs et am√©liorations des performances"
      UI.important("‚ö†Ô∏è  Aucune description de commit trouv√©e, utilisation du changelog par d√©faut")
    end

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      changelog: changelog
    )

    # Commit version and build number changes
    commit_version_bump(
      message: "Bump version to #{get_version_number(xcodeproj: 'Invoicer.xcodeproj')} build #{lane_context[SharedValues::BUILD_NUMBER]} [skip ci]",
      xcodeproj: "Invoicer.xcodeproj",
      force: true
    )

    # Tag release
    add_git_tag(
      tag: "testflight/#{get_version_number(xcodeproj: 'Invoicer.xcodeproj')}/#{lane_context[SharedValues::BUILD_NUMBER]}"
    )

    # Push to remote
    push_to_git_remote
  end

  desc "Build app for release"
  lane :build do
    # Increment build number
    increment_build_number(xcodeproj: "Invoicer.xcodeproj")
    
    # Build the app
    build_app(
      scheme: "Invoicer",
      workspace: nil,
      project: "Invoicer.xcodeproj",
      export_method: "app-store",
      output_directory: "./fastlane/builds"
    )
  end

  desc "Generate screenshots"
  lane :screenshots do
    capture_screenshots
  end

  desc "Deploy to App Store"
  lane :release do
    # Build the app
    build
    
    # Upload to App Store
    deliver(
      submit_for_review: false,
      automatic_release: false,
      force: true
    )
  end
end